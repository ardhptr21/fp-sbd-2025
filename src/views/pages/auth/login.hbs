{{#> "layouts/base"}}

{{#*inline "meta"}}
<title>Login</title>
{{/inline}}

{{#*inline "content"}}
<main class="flex justify-center items-center h-screen">
  <div class="card bg-base-100 shadow-sm w-full max-w-xl border border-base-200">
    <div class="card-body">
      <div class="mb-4 space-y-2">
        <h1 class="text-2xl font-bold">Login</h1>
        <p>
          Silakan masuk ke akun Anda untuk melanjutkan.
        </p>
      </div>
      <form method="POST" class="space-y-3">
        <fieldset class="fieldset">
          <legend class="fieldset-legend">Email atau Username</legend>
          <input type="text" name="credential" class="input w-full" placeholder="Masukkan email atau username" />
        </fieldset>
        <fieldset class="fieldset">
          <legend class="fieldset-legend">Password</legend>
          <input type="password" name="password" class="input w-full" placeholder="Masukkan password" />
        </fieldset>
        {{#if state}}
        <div role="alert" class="alert alert-{{state.type}}">
          <span>{{state.message}}</span>
        </div>
        {{/if}}
        <button type="submit" class="btn btn-primary w-full">Login</button>
        <p class="text-sm text-center">
          Belum punya akun? <a href="/auth/register" class="link link-primary">Daftar sekarang</a>
        </p>
      </form>
    </div>
  </div>
</main>
{{/inline}}

{{#*inline "script"}}
{{/inline}}

{{/"layouts/base"}}