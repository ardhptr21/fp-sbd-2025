{{#> "layouts/base"}}

{{#*inline "meta"}}
<title>Register</title>
{{/inline}}

{{#*inline "content"}}
<main class="flex justify-center items-center h-screen">
  <div class="card bg-base-100 shadow-sm w-full max-w-xl border border-base-200">
    <div class="card-body">
      <div class="mb-4 space-y-2">
        <h1 class="text-2xl font-bold">Register</h1>
        <p>
          Setelah mendaftar, Anda dapat masuk ke akun Anda.
        </p>
      </div>
      <form action="" method="POST" class="space-y-3">
        <fieldset class="fieldset">
          <legend class="fieldset-legend">Nama</legend>
          <input type="text" name="name" class="input w-full" placeholder="Masukkan nama lengkap" />
          {{> "forms/field_error" field_name="name"}}
        </fieldset>
        <fieldset class="fieldset">
          <legend class="fieldset-legend">Email</legend>
          <input type="text" name="email" class="input w-full" placeholder="Masukkan email" />
          {{> "forms/field_error" field_name="email"}}
        </fieldset>
        <fieldset class="fieldset">
          <legend class="fieldset-legend">No. Telepon</legend>
          <input type="text" name="phone" class="input w-full" placeholder="Masukkan nomor telepon" />
          {{> "forms/field_error" field_name="phone"}}
        </fieldset>
        <fieldset class="fieldset">
          <legend class="fieldset-legend">Password</legend>
          <input type="text" name="password" class="input w-full" placeholder="Masukkan password" />
          {{> "forms/field_error" field_name="password"}}
        </fieldset>
        {{> "commons/alert"}}
        <button type="submit" class="btn btn-primary w-full">Register</button>
        <p class="text-sm text-center">
          Sudah punya akun? <a href="/auth/login" class="link link-primary">Login sekarang</a>
        </p>
      </form>
    </div>
  </div>
</main>
{{/inline}}

{{#*inline "script"}}
{{/inline}}

{{/"layouts/base"}}