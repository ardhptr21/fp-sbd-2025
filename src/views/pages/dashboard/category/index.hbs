{{#> "layouts/dashboard"}}

{{#*inline "meta"}}
<title>ECommerce</title>
{{/inline}}

{{#*inline "content"}}
<section class="w-full">
  <div class="flex justify-between">
    <h1 class="text-3xl font-bold">Kategori Barang</h1>
    <a href="/dashboard/category/new" class="btn btn-primary">+ Tambah Kategori</a>
  </div>
  <div class="mt-10 grid grid-cols-2 gap-10">
    {{#each categories}}
    <a href="/dashboard/category/{{this.slug}}"
      class="card bg-base-200 shadow-sm border border-base-300 hover:border-accent cursor-pointer">
      <div class="card-body text-center">
        <h3 class="text-2xl">{{this.name}}</h3>
      </div>
    </a>
    {{/each}}
  </div>
</section>
{{/inline}}

{{#*inline "script"}}
{{/inline}}

{{/"layouts/dashboard"}}