{{#> "layouts/dashboard"}}

{{#*inline "meta"}}
<title>ECommerce</title>
{{/inline}}

{{#*inline "content"}}
<section class="w-full">
  <div class="flex justify-between">
    <h1 class="text-3xl font-bold">Detail Barang</h1>
    <div>
      <a href="/dashboard/product/" class="btn btn-primary btn-outline">Kembali</a>
      <a href="/dashboard/product/test/edit" class="btn btn-secondary">Edit</a>
    </div>
  </div>

  <div class="mt-10 flex gap-10 items-start">
    <figure class="w-2/5 aspect-[4/3] rounded-xl overflow-hidden">
      <img class="object-cover" src="{{product.image}}" alt="Album" />
    </figure>

    <div class="w-3/5">
      <div class="mb-5 space-y-2">
        <h2 class="text-2xl font-bold">{{product.name}}</h2>
        <div class="badge badge-soft badge-accent">{{product.category}}</div>
        <p>
          {{product.description}}
        </p>
      </div>

      <div class="space-y-1">
        <h3 class="text-2xl font-bold">Rp. {{product.price}}</h3>
      </div>
      <div class="divider"></div>
      <div class="mt-5 grid grid-cols-2 gap-5">
        <div>
          <p class="font-bold">Stok</p>
          <p>{{product.stock}} Barang</p>
        </div>
        <div>
          <p class="font-bold">Jumlah Terjual</p>
          <p>10 Barang (todo)</p>
        </div>
        <div>
          <p class="font-bold">Dibuat pada</p>
          <p>{{product.createdAt}}</p>
        </div>
        <div>
          <p class="font-bold">Terakhir diperbarui</p>
          <p>{{product.updatedAt}}</p>
        </div>
      </div>
    </div>
  </div>
</section>
{{/inline}}

{{#*inline "script"}}
{{/inline}}

{{/"layouts/dashboard"}}