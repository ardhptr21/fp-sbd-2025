<div class="card bg-base-100 w-96 shadow-sm border border-base-200 group hover:bg-base-300">
  <figure class="overflow-hidden aspect-[4/3]">
    <img src="{{img_url}}" alt="{{title}}"
      class="w-full h-full bg-cover group-hover:scale-110 duration-300 object-cover" />
  </figure>
  <div class="card-body">
    <div>
      <h2 class="card-title">{{title}}</h2>
      <div class="badge badge-soft badge-accent">{{category}}</div>
    </div>
    <div class="space-y-1">
      <h3 class="text-2xl font-bold">Rp. {{price}}</h3>
      <p class="text-sm text-white/50">{{stock}} barang tersisa</p>
    </div>
    <div class="card-actions justify-end">
      <a class="btn btn-primary" href="/product/{{slug}}">Lihat Detail</a>
    </div>
  </div>
</div>